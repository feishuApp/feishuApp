@font-face {
    font-family: 'iconfont';
    src: url('data:font/truetype;charset=utf-8;base64,') format('truetype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}
.iconfont {
    font-family: "iconfont" ;
    font-size: 30px;
    font-style: normal;
    color: #ffffff;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  .icon-sousuo:before {
    content: "\e60d";
  }



.bar{
  height: fit-content ;
  display: flex;
  flex-direction: column;
  border:rgb(141, 141, 141) 1px solid;
  margin:12px;
  padding: 8px;
  background-color: #eeead9;
  border-radius: 10px;
  box-shadow: 0 0 5px rgb(161, 161, 161);
}
.margin{
  margin-left: 4px;
}
.text-3{
  font-size: 12px;
  line-height: 1em;
  width:max-content;
}
.avatar{
  width:28px;
  border-radius: 50%;
  overflow: hidden;
}
.item-top{
  display: flex;
  flex-direction: row;
  height: 28px;
}
.nickname-ctn{

  display: flex;
  justify-content: space-evenly;
  align-items: center;
  color: #3498db;
  font-weight: bold;
}
.nickname-ctn text{
  font-size: 12px;
  margin-left: 6px;
}

.item-name{
  font-weight: bold;
  font-size: 18px;
  flex:1;

}
.item-bottom{
  display: flex;
  align-items: center;
}
.img-cover{
  width:100%;
  padding-right: 12px;

}
.location-icon{
  width:12px;
}
.item-center{
  padding-top: 4px;
  display: flex;
  flex-direction: row;
}
.item-center-left{
  display: flex;
  flex-direction: column;
  width: 60%;
}
.item-center-right{
  display: flex;
  flex:1;
  flex-direction: column-reverse;
}